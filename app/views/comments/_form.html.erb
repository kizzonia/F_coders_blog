<div class="post-preview">
<%= form_for ( [@post, @post.comments.build] ), :html => {:class => "form-horizontal center"} do |f|  %>
	<div class="form-group">
		 <%= f.label :name, class: "col-md-1 control-label" "Name:" %>
		 
	</div>
	<div class="col-md-8">
	<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group" >
		<%= f.label :body, class: "col-md-8" %>
		</div>
		<div class="col-md-8">
		<%= f.text_area :body, class: "form-control", :rows => 5, :cols => 10  %></br>
	</div>

	<div class="col-md-8">
		<%= f.submit :submit, class: "btn btn-default" %>
	
		</div>
          <% end %>
</div>