
	<%= form_for :post, url: posts_path, :html => {:class => "form-horizontal center"} do |f| %>
	<div class="form-group">
		 <%= f.label :title, class: "col-md-1 control-label" "title:" %>
		 
	</div>
	<div class="col-md-8">
	<%= f.text_field :title, class: "form-control" %>
	</div>
	<div class="form-group" >
		<%= f.label :sub_title, class: "col-md-8" %>
		</div>
		<div class="col-md-8">
		<%= f.cktext_area :sub_title, class: "form-control", :rows => 5, :cols => 18  %>
	</div>

	<div class="form-group" >
		<%= f.label :body, class: "col-md-8" %>
		</div>
		<div class="col-md-8">
		<%= f.cktext_area :body, class: "form-control", :rows => 16, :cols => 16 %>
		</br>
	</div>
	<div class="col-md-8">
		<%= f.submit :submit, class: "btn btn-default" %>
	 </div>
	 <% end %>