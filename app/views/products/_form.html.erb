<%=simple_form_for @product, url: products_path do |f| %>

    <%= f.input :title, placeholder: " Your ProjectTitele" %>

    <%= f.input :order, placeholder: "Your Order title/request" %>
    <%= f.input :description, :as => :pagedown, :input_html => { :preview => true }, placeholder: "What you want, and how you want it with your email address " %>


    <%= f.input :delivery, placeholder: "how urgent do you need your delivery" %>

    <%= f.input :price, placeholder: "price in btc" %>



  <%= f.submit :submit, class: "btn btn-default" %>

<% end %>
